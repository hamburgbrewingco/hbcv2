<div class="menu">
  <h1>Wine List</h1>

  <% @items.where(:category => 'wine').each do |item| %>
    <h3><%= item.name %> - $<%= item.price %></h3>
    <p class='lead'>
      <%= item.description %>
    </p>
    
    <%= link_to 'Show', item %>
    <%= link_to 'Edit', edit_item_path(item) %>
    <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <br>

  <h1>Snacks</h1>

  <% @items.where(:category => 'food').each do |item| %>
    <h3><%= item.name %> - $<%= item.price %></h3>
    <p class='lead'>
      <%= item.description %>
    </p>
    
    <%= link_to 'Show', item %>
    <%= link_to 'Edit', edit_item_path(item) %>
    <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <br>
  <h1>Beer List</h1>

  <% @items.where(:category => 'beer').each do |item| %>
    <h3><%= item.name %> - <%= item.alcohol_percent %>%</h3>
    <p class='lead'>
      <%= item.description %>
    </p>
    
    <%= link_to 'Show', item %>
    <%= link_to 'Edit', edit_item_path(item) %>
    <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <br>

  <%= link_to 'New Item', new_item_path, class: 'btn btn-primary' %>
</div>
