<%= form_for @feature, :html => { :multipart => true } do |f| %>
  <% if @feature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feature.errors.count, "error") %> prohibited this feature from being saved:</h2>

      <ul>
      <% @feature.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :message, 'Alert Message' %><br>
    <%= f.text_field :message, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image_cta1, 'Image 1' %>
    (Images at least 600px wide are best)
    <%= f.file_field :image_cta1, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cta1_header, 'Header 1' %><br>
    <%= f.text_field :cta1_header, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cta1_caption, 'Caption 1' %><br>
    <%= f.text_area :cta1_caption, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cta1_url, 'Button 1 URL' %>
    (leave blank if you don't want to add a button)
    <br>
    <%= f.text_field :cta1_url, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cta1_button, 'Button 1 Text' %><br>
    <%= f.text_field :cta1_button, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image_cta2, 'Image 2' %>
    (Images at least 600px wide are best)
